<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A"
    tools:context=".ChatChamadoActivity">

    <TextView
        android:id="@+id/text_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center_horizontal"
        android:text="HELP
FAST"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_status"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_check_circle"
        app:layout_constraintBottom_toBottomOf="@id/text_logo"
        app:layout_constraintStart_toEndOf="@id/text_logo"
        app:tint="@android:color/white" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_chat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        android:background="#1E293B"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/button_voltar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_logo">

        <TextView
            android:id="@+id/text_info_chamado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ID Chamado: #23 \nAssunto: Problemas com a rede"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/container_botoes_acao"/>

        <LinearLayout
            android:id="@+id/container_botoes_acao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:gravity="center"
            android:background="#FFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_info_chamado"
            app:layout_constraintBottom_toBottomOf="@+id/text_info_chamado">

            <ImageButton
                android:id="@+id/btn_cancelar"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Cancelar"
                android:src="@drawable/ic_cancel"
                app:tint="#000000"
                />

            <ImageButton
                android:id="@+id/btn_concluir"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Concluir"
                android:src="@drawable/ic_check"
                app:tint="#000000" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll_mensagens"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_info_chamado">

            <LinearLayout
                android:id="@+id/layout_mensagens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cliente X"
                        android:textColor="#6B7280"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Olá. estou com problema na minha rede wi-fi, não está pegando sinal"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="48dp"
                        android:backgroundTint="#C0C0C0"
                        android:background="@drawable/bubble_left" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00"
                        android:textColor="#6B7280"
                        android:textSize="10sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Técnico X"
                        android:textColor="#6B7280"
                        android:textSize="12sp"
                        android:gravity="end" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Poderia me fornecer mais detalhes do problema, por gentileza?"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="48dp"
                        android:backgroundTint="#E5E7EB"
                        android:background="@drawable/bubble_right" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:05"
                        android:textColor="#6B7280"
                        android:textSize="10sp"
                        android:gravity="end"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button_voltar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Voltar ao menu"
        app:backgroundTint="@null"
        android:background="@drawable/background_button_white"
        android:textColor="#000000"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>