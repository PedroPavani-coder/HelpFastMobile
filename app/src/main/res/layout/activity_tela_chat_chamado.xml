<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A"
    tools:context=".ChatChamadoActivity">

    <!-- LOGO HELP FAST -->
    <TextView
        android:id="@+id/text_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center_horizontal"
        android:text="HELP
FAST"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ÍCONE AO LADO DO LOGO -->
    <ImageView
        android:id="@+id/icon_status"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_check_circle"
        app:layout_constraintBottom_toBottomOf="@id/text_logo"
        app:layout_constraintStart_toEndOf="@id/text_logo"
        app:tint="@android:color/white" />

    <!-- CONTAINER PRINCIPAL -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_chat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        android:background="#1E293B"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/button_voltar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_logo">

        <!-- Cabeçalho com ID e Assunto -->
        <TextView
            android:id="@+id/text_info_chamado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ID Chamado: #23 \nAssunto: Problemas com a rede"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/container_botoes_acao"/>

        <!-- Botões de ação -->
        <LinearLayout
            android:id="@+id/container_botoes_acao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E6E6E6"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_info_chamado"
            app:layout_constraintBottom_toBottomOf="@+id/text_info_chamado">

            <ImageButton
                android:id="@+id/btn_cancelar"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Cancelar"
                android:src="@drawable/ic_cancel"
                app:tint="#000000" />

            <ImageButton
                android:id="@+id/btn_concluir"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Concluir"
                android:src="@drawable/ic_check"
                app:tint="#000000" />
        </LinearLayout>

        <!-- CORREÇÃO: Trocado ScrollView por RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_mensagens"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toTopOf="@id/layout_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_info_chamado"
            tools:listitem="@layout/item_mensagem_enviada"/>

        <!-- Campo de entrada -->
        <LinearLayout
            android:id="@+id/layout_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#FFFFFF"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btn_add"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_add"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#000000" />

            <EditText
                android:id="@+id/edit_mensagem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Digite aqui..."
                android:background="@null"
                android:paddingStart="8dp"
                android:textColor="#000000"
                android:textColorHint="#9CA3AF" />

            <ImageButton
                android:id="@+id/btn_send"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Enviar Mensagem"
                android:src="@drawable/ic_send"
                app:tint="#000000" />

            <ImageButton
                android:id="@+id/btn_mic"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_mic"
                app:tint="#000000" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- BOTÃO VOLTAR AO MENU -->
    <Button
        android:id="@+id/button_voltar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Voltar ao menu"
        android:background="@drawable/background_button_white"
        android:textColor="#000000"
        android:layout_marginBottom="24dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>